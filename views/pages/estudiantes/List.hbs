{{> menu}}

<h2 style="text-align: center;">{{ viewTitle }}</h2>
<div class="container">
    <table class="table table-striped table-dark">
        <thead>
            <th>estudiante ID</th>
            <th>Nombre</th>
            <th>fecha de cumpleaño</th>
            <th>nivel de grado</th>
        </thead>
        <tbody>
            {{#each List}}
            <tr>
                <td>{{this.studentId}}</td>
                <td>{{this.name}}</td>
                <td>{{this.birthDate}}</td>
                <td>{{this.gradeLevel}}</td>
                <td>
                    <a href="/estudiantes/{{this._id}}" class="btn btn-info">Actualizar</a>
                    <a href="/estudiantes/delete/{{this._id}}" class="btn btn-danger"
                    onclick="return confirm('¿Desea eliminar este registro?');">
                    Borrar</a>

                </td>

            </tr>
            {{/each}}
        </tbody>
    </table>
</div>